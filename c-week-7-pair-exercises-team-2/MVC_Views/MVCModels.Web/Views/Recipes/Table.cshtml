@model IList<Recipe>
@{
    ViewData["Title"] = "Table";
}

<h2>All Recipes</h2>

<div style="display: flex; flex-wrap: wrap;">

    <div style="max-width: 10%; display: flex; flex-direction: column; justify-content: flex-end;">
        <p>Name</p>
        <p>Type</p>
        <p>Cook Time</p>
        <p>Ingredients</p>
        <p>Rating</p>
    </div>

@foreach (Recipe recipe in Model)
{

    <div style="max-width: 30%; max-height: 50%">
        <div style="max-width: 100%; max-height: 100%">
            <a asp-controller="Recipes" asp-action="Detail" asp-route-id="@recipe.Id">
                <img style="max-width:80%; margin-left: auto; margin-right: auto; display: block;" src="~/images/@recipe.ImageName" />
            </a>
        </div>


        <div style="max-width: 100%; max-height: 100%">
            <p style="text-align: center; background-color: lemonchiffon;">@recipe.Name</p>
            <p style="text-align: center;">@recipe.RecipeType</p>
            <p style="text-align: center; background-color: lemonchiffon;">@recipe.CookTimeInMinutes min</p>
            <p style="text-align: center;">@recipe.Ingredients.Count ingredients</p>
            <p style="background-color: lemonchiffon;">
            <img style="width: 100px; height: 20px; margin-left: auto; margin-right: auto; display: block" ; src="~/images/@recipe.RatingImage" />
            </p>
        </div>
    </div>
}



</div>










</div>