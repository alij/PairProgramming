@model ForumPost
@{
    ViewData["Title"] = "NewPost";
}

<h2 style="color:white">New Geek Post</h2>


<form asp-controller="Forum" asp-action="NewPost" method="post">
    <div style="background-color: white;">
        <div>
            <label>Username</label><input type="text" name="Username" required />
            <span asp-validation-for="Username"></span>
        </div>

        <div>
            <label>Subject</label><input type="text" name="Subject" required />
            <span asp-validation-for="Subject"></span>
        </div>

        <div>
            <label>Message</label><input style="height: 3em" type="text" name="Message" required />
            <span asp-validation-for="Message"></span>
        </div>

        <input style="margin-left: 200px" type="submit" value="Submit" />
    </div>

</form>